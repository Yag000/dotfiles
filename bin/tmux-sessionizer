#!/usr/bin/bash

# Credits to @ThePrimeagen, original creator of this script, available at:
# https://github.com/ThePrimeagen/.dotfiles/blob/master/bin/.local/scripts/tmux-sessionizer


if [[ $# -eq 1 ]]; then
    selected=$1
else
    # TODO: Imporve this setup
    selected=$(workplaces |
        while read -r line; do
            zoxide_query=$(zoxide query -l -s "$line")
            [[ -z $zoxide_query ]] && echo "0 $line" && continue
            echo "$zoxide_query"
            # zoxide query -l -s "$line/"
        done |
        sort -rnk1 |
        uniq | # sort by zoxide score (first column)
        awk -F ' ' '{print $2}' |
        fzf --no-sort   # pipe to fzf without its sorting
    )
fi

if [[ -z $selected ]]; then
    exit 0
fi

cd "$selected" || exit 1

# Get the last two parts of the path
selected_name=$(echo "$selected" | awk -F '/' '{print $(NF-1) "/" $NF}' | tr " " "_" | tr "/" "_")
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s "$selected_name" -c "$selected"
    exit 0
fi

if ! tmux has-session -t="$selected_name" 2> /dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected"
fi

if [[ -z "$TMUX" ]]; then
    tmux attach-session -t "$selected_name"
    exit 0
fi

tmux switch-client -t "$selected_name"
